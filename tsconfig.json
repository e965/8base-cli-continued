{
  "compilerOptions": {
    "diagnostics": true,
    "declaration": false,
    "declarationMap": false,
    "module": "ES2020",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "sourceMap": false,
    "inlineSourceMap": false,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ]
}
